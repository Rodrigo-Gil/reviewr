<?xml version='1.0' encoding='utf-8'?>
<widget id="com.algonquinlive.gil00013.reviewr" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rodrigo's Reviewr</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!--
            mdpi    : 48x48 px
            hdpi    : 72x72 px
            xhdpi   : 96x96 px
            xxhdpi  : 144x144 px
            xxxhdpi : 192x192 px
        -->
        <icon src="./android_icons/48w/mdpi.png" density="mdpi" />
        <icon src="./android_icons/72w/hdpi.png" density="hdpi" />
        <icon src="./android_icons/96w/xhdpi.png" density="xhdpi" />
        <icon src="./android_icons/144w/xxhdpi.png" density="xxhdpi" />
        <icon src="./android_icons/192w/xxxhdpi.png" density="xxxhdpi" />
        <!-- splash screen -->
        <splash src="./splash_screens/hdpi/hdpi.png" density="port-hdpi"/>
        <splash src="./splash_screens/ldpi/ldpi.png" density="port-ldpi"/>
        <splash src="./splash_screens/mdpi/mdpi.png" density="port-mdpi"/>
        <splash src="./splash_screens/xhdpi/xhdpi.png" density="port-xhdpi"/>
        <splash src="./splash_screens/xxhdpi/xxhdpi.png" density="port-xxhdpi"/>

        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="3000" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
